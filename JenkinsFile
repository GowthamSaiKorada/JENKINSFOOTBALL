    pipeline {
        agent any

        stages {

            // ===== FRONTEND BUILD =====
            stage('Build Frontend') {
                steps {
                    dir('FOOTBALLFRONTEND') {
                        bat 'npm install'
                        bat 'npm run build'
                    }
                }
            }

            // ===== FRONTEND DEPLOY =====
            stage('Deploy Frontend to Tomcat') {
                steps {
                    bat '''
                    if exist "C:\\Program Files\\Apache Software Foundation\\Tomcat 10.1\\webapps\\reactfootballplayerapi" (
                        rmdir /S /Q "C:\\Program Files\\Apache Software Foundation\\Tomcat 10.1\\webapps\\reactfootballplayerapi"
                    )
                    mkdir "C:\\Program Files\\Apache Software Foundation\\Tomcat 10.1\\webapps\\reactfootballplayerapi"
                    xcopy /E /I /Y FOOTBALLFRONTEND\\dist\\* "C:\\Program Files\\Apache Software Foundation\\Tomcat 10.1\\webapps\\reactfootballplayerapi"
                    '''
                }
            }

            // ===== BACKEND BUILD =====
            stage('Build Backend') {
                steps {
                    dir('FOOTBALLSPRINGBOOT') {
                        bat 'mvn clean package'
                    }
                }
            }

            // ===== BACKEND DEPLOY =====
            stage('Deploy Backend to Tomcat') {
                steps {
                    bat '''
                    if exist "C:\\Program Files\\Apache Software Foundation\\Tomcat 10.1\\webapps\\FOOTBALLSPRINGBOOT.war" (
                        del /Q "C:\\Program Files\\Apache Software Foundation\\Tomcat 10.1\\webapps\\FOOTBALLSPRINGBOOT.war"
                    )
                    if exist "C:\\Program Files\\Apache Software Foundation\\Tomcat 10.1\\webapps\\sFOOTBALLSPRINGBOOT" (
                        rmdir /S /Q "C:\\Program Files\\Apache Software Foundation\\Tomcat 10.1\\webapps\\FOOTBALLSPRINGBOOT"
                    )
                    copy "FOOTBALLSPRINGBOOT\\target\\*.war" "C:\\Program Files\\Apache Software Foundation\\Tomcat 10.1\\webapps\\"
                    '''
                }
            }

        }


        post {
            success {
                echo 'Deployment Successful!'
            }
            failure {
                echo 'Pipeline Failed.'
            }
        }
    }